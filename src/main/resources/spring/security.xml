		<constructor-arg value="384557297665-3n8abq0eana7g9igakohgfsiu1q57qh3.apps.googleusercontent.com" />
		<constructor-arg value="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s" />
	</bean>
	<!-- 승인된 리디렉션 URI -->
	<bean id="googleOAuth2Parameters"
		class="org.springframework.social.oauth2.OAuth2Parameters">
 		<property name="scope"
			value="http://localhost" /> 
		<property name="redirectUri"
			value="http://localhost/user/googleSignInCallback" />
	</bean>
</beans>